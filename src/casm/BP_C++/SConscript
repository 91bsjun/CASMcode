# This is: src/casm/BP_C++/SConscript

import os, glob

Import('env')

bpcpp_lib_src = glob.glob('*.cc')

bpcpp_lib_sobj = env.SharedObject(bpcpp_lib_src)
env['COMPILE_TARGETS'] = env['COMPILE_TARGETS'] + bpcpp_lib_sobj
env['CASM_SOBJ'] = env['CASM_SOBJ'] + bpcpp_lib_sobj
